<select id="getSearchList" resultType="Mytotalwork">
    SELECT
    P.title,
    I.issue_subject,
    I.issue_status
    FROM
    project P
    JOIN issue I ON P.num = I.project_id
    <where>
        <if test="search_field != null">
              and (P.title like '%' || #{search_word} || '%' OR I.issue_subject like '%' || #{search_word} || '%')
        
        </if>
    </where>
</select>


  

</mapper>